<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/main_bg"
    >
     <!-- <LinearLayout
        android:id="@+id/ly_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        
         >  -->
         <LinearLayout
                         android:id="@+id/ly_find_contact_setting"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                      
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/username_bg_img"
                        android:orientation="horizontal"
                        
                       >
                       

                        <TextView
                            android:id="@+id/name_setting"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:text="Please register a caregiver"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white" />
                    </LinearLayout>
   <TextView 
       android:id="@+id/tv_set_start_or_stop_service"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:padding="5dp"
       android:text="Start Service"
       android:textSize="20sp"
       android:textColor="@android:color/white"
       android:gravity="center"
       android:paddingRight="20dp"
       />

    <LinearLayout
        android:id="@+id/ly_main_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
            android:gravity="center"
        
         > 
        <ImageView 
            android:id="@+id/iv_service_start"
            android:layout_width="150dp"
            android:layout_height="150dp"
           
            android:background="@drawable/btn_on"
            /> 
             </LinearLayout>
<!--  </LinearLayout> -->
 </LinearLayout>