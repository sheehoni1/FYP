<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
        
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    
    
    >

      <RelativeLayout
        android:id="@+id/tabbar_mobile_falling_custom_friend_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
       >
 <!-- android:background="@drawable/login_bg" -->
        <LinearLayout
            android:id="@+id/ly_main_mobile_falling_custom_friend_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="3" 
          android:orientation="horizontal"
            android:background="@drawable/select_friend_bg"
            >

            
          <RelativeLayout
                android:id="@+id/rl_profile_pic_and_loader_custom_friend_list"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="10dp"
                android:orientation="horizontal" 
                android:gravity="center"
                android:layout_gravity="center"
                >

                <ImageView
                    android:id="@+id/iv_profile_pic_custom_friend_list"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    android:src="@drawable/pic1"
                     />

                <ProgressBar
                    android:id="@+id/pb_progress_profile_pic_custom_friend_list"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_friend_name_custom_friend_list"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="Friend name"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:typeface="normal" />
            <LinearLayout
                android:id="@+id/ly_checked_custom_friend_lists"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_check_custom_friend_lists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/image_description"
                    android:paddingTop="5dp"
                    android:src="@drawable/check_box" />
            </LinearLayout>
        </LinearLayout> 
    </RelativeLayout>
    

</LinearLayout>